<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="serverUI.AdminPanelController"
            prefWidth="900" prefHeight="550">

    <top>
        <HBox spacing="12">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Server status:"/>
            <Label fx:id="lblServerStatus" text="STOPPED"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Label text="Port:"/>
            <Label fx:id="lblPort" text="80"/>

            <Label text="Active clients:"/>
            <Label fx:id="lblClients" text="0"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Start" onAction="#onStartServer"/>
            <Button text="Stop"  onAction="#onStopServer"/>
        </HBox>
    </top>

    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">

            <Tab text="Users">
                <SplitPane dividerPositions="0.65">

                    <VBox spacing="8">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>

                        <Label text="Registered users"/>
                        <TableView fx:id="tblUsers">
                            <columns>
                                <TableColumn fx:id="colUsername" text="Username" prefWidth="200"/>
                                <TableColumn fx:id="colRights" text="Rights" prefWidth="300"/>
                            </columns>
                        </TableView>

                        <HBox spacing="8">
                            <Button text="Reload XML" onAction="#onReloadUsers"/>
                            <Button text="Save XML" onAction="#onSaveUsers"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="Delete" onAction="#onDeleteUser"/>
                        </HBox>
                    </VBox>

                    <VBox spacing="12">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>

                        <Label text="Create / Edit User"/>

                        <GridPane hgap="10" vgap="10">
                            <Label text="Username:" GridPane.rowIndex="0"/>
                            <TextField fx:id="tfUsername" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Password:" GridPane.rowIndex="1"/>
                            <PasswordField fx:id="pfPassword" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Rights:" GridPane.rowIndex="2"/>
                            <VBox spacing="6" GridPane.rowIndex="2" GridPane.columnIndex="1">
                                <CheckBox fx:id="cbEncrypt" text="Can Encrypt"/>
                                <CheckBox fx:id="cbDecrypt" text="Can Decrypt"/>
                                <CheckBox fx:id="cbAdmin" text="Admin"/>
                            </VBox>
                        </GridPane>

                        <HBox spacing="8">
                            <Button text="Add / Save" onAction="#onAddOrSaveUser"/>
                            <Button text="Clear" onAction="#onClearForm"/>
                        </HBox>

                        <Label fx:id="lblUserResult"/>
                    </VBox>

                </SplitPane>
            </Tab>

            <Tab text="Export">
                <VBox spacing="14">
                    <padding>
                        <Insets top="12" right="12" bottom="12" left="12"/>
                    </padding>

                    <Label text="Export encrypted data"/>
                    <Button text="Export sorted by cryptogram" onAction="#onExportByCryptogram"/>
                    <Button text="Export sorted by card number" onAction="#onExportByCard"/>
                    <Separator/>
                    <Label fx:id="lblExportResult"/>
                </VBox>
            </Tab>

            <Tab text="Logs">
                <BorderPane>
                    <padding>
                        <Insets top="10" right="10" bottom="10" left="10"/>
                    </padding>

                    <top>
                        <HBox spacing="8">
                            <Button text="Clear logs" onAction="#onClearLogs"/>
                            <CheckBox fx:id="cbAutoScroll" text="Auto-scroll" selected="true"/>
                        </HBox>
                    </top>
                    <center>
                        <TextArea fx:id="taLogs" editable="false" wrapText="true"/>
                    </center>
                </BorderPane>
            </Tab>

        </TabPane>
    </center>

</BorderPane>
